<!--
  Default settings for all production code (i.e. non-test) projects.

  To use it, create a .NET Core or .NET Standard project (modern project format)
  and then add this line at the top:

  <Import Project="$([MSBuild]::GetPathOfFileAbove('Project.Code.props', '$(MSBuildThisFileDirectory)'))" />
-->
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <Import Project="$(MSBuildThisFileDirectory)Project.Shared.props" />

  <!--
    NuGet (and assembly) properties

    Additional properties to specify on each project: <PackageId>, <Description>, <Version>, <Authors>

    See:
    * https://docs.microsoft.com/en-us/dotnet/core/tools/csproj#nuget-metadata-properties
    * https://docs.microsoft.com/en-us/nuget/reference/msbuild-targets#pack-target
    * https://docs.microsoft.com/en-us/nuget/reference/nuspec
  -->
  <PropertyGroup>
    <Copyright>Copyright Â© Sebastian Krysmanski $([System.DateTime]::Now.ToString(yyyy))</Copyright>

    <!-- See: https://spdx.org/licenses/ -->
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>

    <RepositoryUrl>https://github.com/skrysmanski/AppMotor</RepositoryUrl>
    <RepositoryType>git</RepositoryType>

    <!-- Why would this ever by "false"? -->
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
  </PropertyGroup>

  <ItemGroup>
    <!-- Make internals automatically available to the associated tests project. -->
    <!-- Can be replaced with something better in .NET 5: https://github.com/dotnet/sdk/pull/3439 -->
    <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
      <_Parameter1>$(MSBuildProjectName).Tests</_Parameter1>
    </AssemblyAttribute>
  </ItemGroup>

  <ItemGroup>
    <!-- Code analysis for .NET; See: https://docs.microsoft.com/en-us/visualstudio/code-quality/install-fxcop-analyzers -->
    <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="3.3.0" PrivateAssets="all" />
  </ItemGroup>

</Project>

{
    "cSpell.words": [
        "editorconfig",
        "markdownlint"
    ],

    "files.associations": {
        "*.DotSettings": "xml",
    },

    "markdownlint.config": {
        // No trailing punctuation in heading
        "MD026": false,
        // Emphasis used instead of heading
        "MD036": false,
        // Fenced code blocks should have a language specified
        "MD040": false,
        // Inconsistent code blocks are sometimes nicer to write
        "MD046": false,
    }
}
